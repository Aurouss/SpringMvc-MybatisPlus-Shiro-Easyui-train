<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration 
PUBLIC "-//ibatis.apache.org//DTD Config 3.0//EN" 
"http://ibatis.apache.org/dtd/ibatis-3-config.dtd"> 

<configuration>
    <!-- 配置MyBatis属性
    <properties>
        <property name="dialect" value="mysql" />  方言
        <property name="pageSqlId" value=".*Page$" />  拦截哪种SQL：以Page结尾SQL
    </properties> -->

    <!-- 进行mybatis 配置 -->
    <typeAliases>
        <!-- 为类型 起了别名 -->
        <typeAlias type="com.wangzhixuan.blog.model.Staff" alias="Staff"/>
        <typeAlias type="com.wangzhixuan.blog.model.Role" alias="Role"/>
        <typeAlias type="com.wangzhixuan.blog.model.Resource" alias="Resource"/>
    </typeAliases>

    <!-- 配置mybatis 拦截器 
    <plugins>
        <plugin interceptor="com.wangzhixuan.blog.page.PageInterceptor"></plugin>
    </plugins> -->

    <!-- 引入自定义 mapper 文件 -->
    <mappers>
        <mapper resource="sqlMapperXml/StaffDao.xml"/> 
        <mapper resource="sqlMapperXml/RoleDao.xml"/> 
        <mapper resource="sqlMapperXml/ResourceDao.xml"/> 
    </mappers>
</configuration> 