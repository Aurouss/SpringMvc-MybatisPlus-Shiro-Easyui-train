<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wangzhixuan.mapper.OrganizationMapper">
	<sql id="Base_Column_List">
		id, name, address, code, icon, pid, seq, crTime
	</sql>

	<select id="findOrganizationAllByPidNull" resultType="Organization">
		select distinct
		<include refid="Base_Column_List" />
		from organization where pid is null order by seq
	</select>

	<select id="findOrganizationAllByPid" resultType="Organization"
		parameterType="java.lang.Long">
		select distinct
		<include refid="Base_Column_List" />
		from organization where pid = #{pid} order by seq
	</select>

	<select id="findOrganizationAll" resultType="Organization">
		select
		<include refid="Base_Column_List" />
		from organization order by seq
	</select>

</mapper>